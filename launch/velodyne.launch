<launch>

  <!-- add a static route: sudo route add 192.168.17.214 eth0 -->

  <node pkg="tf" type="static_transform_publisher" name="lidar_tf_broadcaster" args="0 0 0.25 0 0 0 base_link velodyne 100" />

  <include file="$(find velodyne_pointcloud)/launch/32e_points.launch"/>
  <arg name="calibration" default="$(find aribo)/calibration/32db.yaml"/>

  <!-- Required parameters -->
  <arg name="manager" value="velodyne_nodelet_manager"/>
  <arg name="output_topic" value="/velodyne"/>

  <node name="rviz" pkg="rviz" type="rviz" respawn="false" output="screen" args="-d $(find aribo)/launch/velodyne.rviz"/>

</launch>
