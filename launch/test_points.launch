<!-- Required parameters -->
<launch>
  <node pkg="tf" type="static_transform_publisher" name="lidar_tf_broadcaster"
        args="0 0 0.86121875 0 0 0 base_link velodyne 100" />
                
  <!-- Required parameters -->
  <arg name="manager" value="velodyne_nodelet_manager"/>
  <arg name="output_topic" value="/velodyne"/>

  <!-- declare arguments with default values -->
  <arg name="pcap" default="/home/user1/Desktop/velodyne64.pcap" />
  <arg name="calibration" default="$(find velodyne_pointcloud)/params/64e_utexas.yaml"/>

  <!-- start nodelet manager and driver nodelets -->
  <include file="$(find velodyne_driver)/launch/nodelet_manager.launch">
    <arg name="model" value="64E"/>
    <arg name="pcap" value="$(arg pcap)"/>
  </include>
  
    <!-- start cloud nodelet -->
    <include file="$(find velodyne_pointcloud)/launch/cloud_nodelet.launch">
    <arg name="calibration" value="$(arg calibration)"/>
    </include>
    <!--
    <node name="ground_filter" pkg="omap" type="planerSegmentation" args="/input:=/velodyne_points /output:=/cloud_in"/>
    
      <node name="octomap_server" pkg="octomap_server" type="octomap_server_node" args="/projected_map:=/map">
      <param name="filter_ground" value="false" /> 
      <param name="ground_filter/distance" value=".01" />
    </node>
-->


  <!-- Conver the pointcloud to a laser scan while z-filtering  
    <node pkg="nodelet" type="nodelet" name="zPassThroughFilter" args="load pcl/PassThrough $(arg manager)">
        <remap from="~input" to="/velodyne_points"/>
        <remap from="~output" to="laser_scan"/>
        <param name="filter_field_name" value="z" />
        <param name="filter_limit_min" value="-1.0" />
        <param name="filter_limit_max" value="-0.1" />
        <param name="filter_limit_negative" value="false" />
        <param name="input_frame" value="$(arg output_topic)" />
        <param name="output_frame" value="$(arg output_topic)" />
    </node>

